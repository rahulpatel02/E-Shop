@model Order
@{
    ViewData["Title"] = "CheckOut Form";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
<div class="text-center">
    <h1>Delivery Address</h1>
   
    <div class="mt-5 mb-0" style="border:1px solid black">

        <form method="POST" asp-controller="Order" asp-action="Checkout" >
        <div class="form-group">
            <div class="row">
                <div class="col-sm">
                       
                        <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                    <div class="col-sm">
                       
                        <input asp-for="LastName" type="text" class="form-control" placeholder="Last Name">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
            </div>
               
        </div>
       
        <div class="form-group">
                <div class="row">
                    <div class="col-sm">
          
            <input asp-for="Email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
                <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                 <div class="col-sm">
                       
                        <input asp-for="PhoneNumber" type="number" class="form-control" placeholder="Phone Numbre">
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                     </div>
                     </div>
           
        </div>
       
        <div class="form-group">
           
            <input asp-for="Address" type="text" class="form-control" placeholder="Address">
                <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
                <div class="row">
                    <div class="col-sm">
           
            <input asp-for="Country" type="text" class="form-control" placeholder="Country">
                <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                    <div class="col-sm">
                       
                        <input asp-for="State" type="text" class="form-control" placeholder="State">
                        <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                    <div class="col-sm">
                       
                        <input asp-for="ZipCode" type="number" class="form-control" placeholder="ZipCode">
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                        </div>
                        </div>
        </div>
       
        <button type="submit" class="btn btn-primary">Place Order</button>
    </form>

    </div>
