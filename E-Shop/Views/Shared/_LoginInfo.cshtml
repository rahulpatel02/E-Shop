@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> _signInManager

@if(_signInManager.IsSignedIn(User))
{
        <li class="nav-item"><a class="nav-link text-white ">
            @(User.FindFirst("UserFirstName").Value + " " + User.FindFirst("UserLastName").Value)
            </a></li>
    <li class="nav-item"><a class="nav-link text-white" asp-controller="Order" asp-action="ViewOrder">Orders</a></li>
        <li class="nav-item"><a class="nav-link text-white" asp-controller="Account" asp-action="Logout">Logout</a></li>
}else{

    <li class="nav-item"><a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a></li>
    <li class="nav-item"><a class="nav-link text-white" asp-controller="Account" asp-action="Signup">SignUp</a></li>
}